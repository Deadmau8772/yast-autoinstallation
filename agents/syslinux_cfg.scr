/**
 * File:
 */
.tmp.syslinux_cfg

`ag_anyagent(
  SCR::AnyAgent (
    ``(File("/tmp/tmp_syslinux.cfg")),	// real file name
      "#\n",				// Comment
      false,				// read-only
      ``(Tuple (
	Optional (Whitespace ()),
	Choice (
	  [ "APPEND",		Sequence (Whitespace (), `append (String("^\n")))],
	  [ "DEFAULT",		Sequence (Whitespace (), `image (String("^\n")))],
	  [ "DISPLAY",		Sequence (Whitespace (), `display (String("^\n")))],
	  [ "PROMPT",		Sequence (Whitespace (), `prompt (String("^\n")))],
	  [ "TIMEOUT",		Sequence (Whitespace (), `timeout (String("^\n")))]
	),
	Continue ("\n")
      ))
   )
)
