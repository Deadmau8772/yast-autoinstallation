<!-- NIS Client --> 

<!ENTITY % y2_nisclient (nis_broadcast|nis_broken_server|nis_by_dhcp|nis_domain|nis_domain_by_dhcp|nis_local_only|nis_options|nis_other_domains|nis_servers|nis_servers_by_dhcp|start_autofs|start_nis)>

<!ELEMENT nis (%y2_nisclient;)* >
<!ELEMENT nis_broadcast (#PCDATA)>
<!ATTLIST nis_broadcast
	config:type CDATA NMTOKEN #FIXED "boolean"
>

<!ELEMENT nis_broken_server (#PCDATA)>
<!ATTLIST nis_broken_server
	config:type CDATA NMTOKEN #FIXED "boolean"
>
<!ELEMENT nis_servers_by_dhcp (#PCDATA)>
