	config:type CDATA NMTOKEN #FIXED "boolean"
>
<!ELEMENT nis_domain (#PCDATA)>
<!ELEMENT nis_local_only (#PCDATA)>
<!ATTLIST nis_local_only
	config:type CDATA NMTOKEN #FIXED "boolean"
>
<!ELEMENT nis_options (#PCDATA)>
<!ENTITY % y2_nis_other_domain (nis_broadcast|nis_domain|nis_servers" )
<!ELEMENT nis_other_domain (%y2_nis_other_domain;)*>
<!ELEMENT nis_other_domains (nis_other_domain*)>
<!ATTLIST nis_other_domains
	config:type CDATA NMTOKEN #FIXED "list"
>
<!ELEMENT nis_servers (nis_server+)>
<!ATTLIST nis_servers
	config:type CDATA NMTOKEN #FIXED "list"
>
