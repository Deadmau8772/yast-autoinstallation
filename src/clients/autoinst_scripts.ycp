{
    textdomain "autoinst";

    import "AutoinstScripts";
    import "Wizard";
    import "Summary";

    include "ui/common_messages.ycp";
    include "autoinstall/script_dialogs.ycp";

    any ret = nil;
    string func = "";
    map param = $[];

    /* Check arguments */
    if(size(Args()) > 0 && is(Args(0), string)) {
	func = WFM::Args(0);
	if(size(Args()) > 1 && is(Args(1), map))
	    param = WFM::Args(1);
    }
    y2debug("func=%1", func);
    y2debug("param=%1", param);

    if (func == "Import")
    {
	ret = AutoinstScripts::Import(param);
    }
    /* create a  summary*/
    else if (func == "Summary")
    {
	AutoinstScripts::Import(param);
	ret =  AutoinstScripts::Summary();
    }
    else if (func == "Reset")
    {
	AutoinstScripts::Import($[]);
	ret =  $[];
    }
    else if (func == "Change") {
	Wizard::CreateDialog();
	ret =ScriptsDialog();
	Wizard::CloseDialog();
    }
    else if (func == "Export")
    {
	ret = AutoinstScripts::Export();
    }
    /* unknown function */
    else {
	y2error("unknown function: %1", func);
	ret = false;
    }

    y2debug("ret=%1", ret);
    y2milestone("scripts auto finished");
    y2milestone("----------------------------------------");

    return ret;
}


